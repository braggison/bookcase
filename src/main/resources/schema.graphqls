type Query {
	getAllBooks: [Book]
	getBooksByAuthor(authorId: ID): [Book]
	getAuthor(name: String): [Author] 
}

type Mutation {
	saveBook(title: String!): Book!
	saveAuthor(name: String!): Author!
}

type Book {
	id: ID
	title: String
	authors: [Author]
}

type Author {
	id: ID
	name: String
	books: [Book]
}