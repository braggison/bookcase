query getBooksByAuthor($author: Author) {
	book(author: $author) {
		title
		authors {
			name
		}
	}
}

query getAllBooks() {
	book {
		title
		authors {
			name
		}
	}
}

query getAuthor($name: String) {
	name
	books {
		title
		authors {
			name
		}
	}
}

